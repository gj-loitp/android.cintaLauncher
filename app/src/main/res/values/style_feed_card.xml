<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppLauncher.FeedCard.CardBehind" parent="Theme.AppLauncher">
        <item name="android:paddingHorizontal">@dimen/feed_card_padding</item>
        <item name="android:paddingBottom">@dimen/feed_card_padding_vertical</item>
    </style>

    <style name="Theme.AppLauncher.FeedCard.Time" parent="Theme.AppLauncher">
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textColor">@color/feed_card_text_dark_description</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingHorizontal">@dimen/margin_padding_small</item>
    </style>

    <style name="Theme.AppLauncher.FeedCard.Header" parent="Theme.AppLauncher">
        <item name="android:layout_marginBottom">@dimen/margin_padding_small</item>
    </style>

    <style name="Theme.AppLauncher.FeedCard.Source" parent="Theme.AppLauncher">
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textColor">@color/feed_card_text_dark_description</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.AppLauncher.FeedCard.SourceIcon" parent="Theme.AppLauncher">
        <item name="android:tint">@color/feed_card_text_dark_title</item>
        <item name="android:paddingHorizontal">@dimen/margin_padding_small</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="Theme.AppLauncher.FeedCard.Title" parent="Theme.AppLauncher">
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textColor">@color/feed_card_text_dark_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">@dimen/feed_card_spacing</item>
    </style>

    <style name="Theme.AppLauncher.FeedCard.Description" parent="Theme.AppLauncher">
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textColor">@color/feed_card_text_dark_description</item>
        <item name="android:paddingHorizontal">@dimen/feed_card_spacing</item>
        <item name="android:paddingTop">@dimen/feed_card_spacing</item>
    </style>

</resources>
