<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CintaLauncher.FeedCard.ImageCard" parent="Theme.CintaLauncher">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/default_card_bg</item>
    </style>

    <style name="Theme.CintaLauncher.FeedCard.CardBehind" parent="Theme.CintaLauncher">
        <item name="android:paddingHorizontal">@dimen/feed_card_padding</item>
        <item name="android:paddingBottom">@dimen/feed_card_padding_vertical</item>
    </style>

    <style name="Theme.CintaLauncher.FeedCard.Time" parent="Theme.CintaLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/feed_card_text_dark_description</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="Theme.CintaLauncher.FeedCard.Source" parent="Theme.CintaLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/feed_card_text_dark_description</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.CintaLauncher.FeedCard.SourceIcon" parent="Theme.CintaLauncher">
        <item name="android:tint">@color/feed_card_text_dark_title</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Theme.CintaLauncher.FeedCard.Title" parent="Theme.CintaLauncher">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/feed_card_text_dark_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">@dimen/feed_card_spacing</item>
    </style>

    <style name="Theme.CintaLauncher.FeedCard.Description" parent="Theme.CintaLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/feed_card_text_dark_description</item>
        <item name="android:padding">@dimen/feed_card_spacing</item>
    </style>

    <style name="Theme.CintaLauncher.FeedCard.Actions.Container" parent="Theme.CintaLauncher">
        <item name="android:layout_marginHorizontal">6dp</item>
        <item name="cardCornerRadius">6dp</item>
    </style>

    <style name="Theme.CintaLauncher.FeedCard.Action.Container" parent="Theme.CintaLauncher">
        <item name="android:paddingVertical">6dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:background">@drawable/ripple</item>
    </style>

    <style name="Theme.CintaLauncher.FeedCard.Action.Text" parent="Theme.CintaLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>
</resources>