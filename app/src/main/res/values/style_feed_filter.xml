<resources>
    <style name="Theme.CintaLauncher.FeedFilters" parent="Theme.CintaLauncher">
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

    <style name="Theme.CintaLauncher.FeedFilter.Card" parent="Theme.CintaLauncher">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:layout_marginHorizontal">4dp</item>
    </style>

    <style name="Theme.CintaLauncher.FeedFilter.Container" parent="Theme.CintaLauncher">
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:minHeight">38dp</item>
    </style>

    <style name="Theme.CintaLauncher.FeedFilter.Text" parent="Theme.CintaLauncher">
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.CintaLauncher.FeedFilter.Icon" parent="Theme.CintaLauncher">
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
    </style>
</resources>