<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppLauncher.ListPopup.Item.Container" parent="Theme.AppLauncher">
        <item name="android:minHeight">50dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="Theme.AppLauncher.ListPopup.Item.Icon" parent="Theme.AppLauncher">
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">-8dp</item>
    </style>

    <style name="Theme.AppLauncher.ListPopup.Item.Label" parent="Theme.AppLauncher">
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.AppLauncher.ListPopup.Item.Description" parent="Theme.AppLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.AppLauncher.ListPopup.Item.Switch" parent="Theme.AppLauncher">
        <item name="android:layout_margin">@dimen/margin_padding_small</item>
    </style>

    <style name="Theme.AppLauncher.ListPopup.Title.Separator" parent="Theme.AppLauncher">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Theme.AppLauncher.ListPopup.Title.Label" parent="Theme.AppLauncher">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.AppLauncher.ListPopup.Title.Description" parent="Theme.AppLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.AppLauncher.ItemPopup.Container" parent="Theme.AppLauncher">
        <item name="cardBackgroundColor">@color/drawer_bottom_bar</item>
        <item name="cardCornerRadius">@dimen/item_card_radius</item>
        <item name="android:elevation">@dimen/item_card_elevation</item>
    </style>

    <style name="Theme.AppLauncher.ItemPopup.Shortcut.Icon" parent="Theme.AppLauncher">
        <item name="android:padding">@dimen/margin_padding_small</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Theme.AppLauncher.ItemPopup.Shortcut.Label" parent="Theme.AppLauncher">
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>
