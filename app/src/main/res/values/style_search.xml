<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppLauncher.SearchBar.Container" parent="Theme.AppLauncher">
        <item name="cardCornerRadius">@dimen/search_bar_radius</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">@dimen/item_card_margin</item>
        <item name="android:elevation">@dimen/item_card_elevation</item>
    </style>

    <style name="Theme.AppLauncher.SearchBar.Text" parent="Theme.AppLauncher">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingEnd">@dimen/margin_padding_medium</item>
        <item name="android:fadingEdgeLength">12dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Theme.AppLauncher.SearchBar.Icon" parent="Theme.AppLauncher">
        <item name="android:padding">@dimen/margin_padding_small</item>
    </style>

</resources>
