<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CintaLauncher.SearchResultCard" parent="Theme.CintaLauncher">
        <item name="cardCornerRadius">@dimen/feed_card_radius</item>
        <item name="cardElevation">4dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/default_card_bg</item>
    </style>

    <style name="Theme.CintaLauncher.SearchBar.Container" parent="Theme.CintaLauncher">
        <item name="cardCornerRadius">@dimen/item_card_radius</item>
        <item name="android:padding">4dp</item>

        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Theme.CintaLauncher.SearchBar.Text" parent="Theme.CintaLauncher">
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:fadingEdgeLength">12dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Theme.CintaLauncher.SearchBar.Icon" parent="Theme.CintaLauncher">
        <item name="android:padding">8dp</item>
    </style>

    <style name="Theme.CintaLauncher.SearchResult.Container" parent="Theme.CintaLauncher">
        <item name="android:paddingHorizontal">6dp</item>
        <item name="android:paddingVertical">4dp</item>
    </style>

    <style name="Theme.CintaLauncher.SearchResult.Simple.Icon" parent="Theme.CintaLauncher">
        <item name="android:padding">8dp</item>
    </style>

    <style name="Theme.CintaLauncher.SearchResult.Simple.Title" parent="Theme.CintaLauncher">
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.CintaLauncher.SearchResult.Simple.Subtitle" parent="Theme.CintaLauncher">
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>