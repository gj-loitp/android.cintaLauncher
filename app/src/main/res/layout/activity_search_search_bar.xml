<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Theme.AppLauncher.SearchBar.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<!--    <com.roy93group.launcher.ui.view.SeeThoughView-->
<!--        android:id="@+id/blurBg"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:alpha="0.3" />-->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_bar_height"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/Theme.AppLauncher.SearchBar.Icon"
            android:layout_width="@dimen/search_bar_height"
            android:layout_height="@dimen/search_bar_height"
            android:src="@drawable/ic_search"
            android:tint="@color/colorPrimary" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etSearchBarText"
            style="@style/Theme.AppLauncher.SearchBar.Text"
            android:layout_width="0dp"
            android:layout_height="@dimen/search_bar_height"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:imeOptions="actionSearch"
            android:includeFontPadding="false"
            android:inputType="number|text|phone|datetime"
            android:lines="1"
            android:scrollHorizontally="true"
            android:textCursorDrawable="@color/colorPrimary">

            <requestFocus />
        </androidx.appcompat.widget.AppCompatEditText>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>
