<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/round_large"
    app:cardElevation="@dimen/margin_padding_small"
    app:cardUseCompatPadding="true"
    tools:cardBackgroundColor="@color/color_test_primary">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_bar_height"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSearch"
            android:layout_width="@dimen/search_bar_height"
            android:layout_height="@dimen/search_bar_height"
            android:padding="@dimen/margin_padding_small"
            android:src="@drawable/ic_search"
            tools:tint="@color/color_test_background" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etSearchBarText"
            android:layout_width="0dp"
            android:layout_height="@dimen/search_bar_height"
            android:layout_marginEnd="@dimen/margin_padding_medium"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="false"
            android:gravity="center_vertical"
            android:hint="@string/smart_search"
            android:imeOptions="actionSearch"
            android:inputType="number|text|phone|datetime"
            android:lines="1"
            android:scrollHorizontally="true"
            android:textSize="@dimen/txt_medium"
            android:textStyle="bold"
            tools:text="@string/app_name"
            tools:textColor="@color/color_test_background"
            tools:textColorHint="@color/color_test_background"
            tools:textCursorDrawable="@color/color_test_background">

            <requestFocus />
        </androidx.appcompat.widget.AppCompatEditText>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.google.android.material.card.MaterialCardView>
