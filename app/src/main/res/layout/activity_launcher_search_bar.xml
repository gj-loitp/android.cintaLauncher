<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_bar_container"
    style="@style/Theme.CintaLauncher.SearchBar.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.roy93group.launcher.ui.view.SeeThoughView
        android:id="@+id/search_bar_blur_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_bar_height"
        android:alpha="0.2" />

    <ImageView
        android:id="@+id/search_bar_icon"
        style="@style/Theme.CintaLauncher.SearchBar.Icon"
        android:layout_width="@dimen/search_bar_height"
        android:layout_height="@dimen/search_bar_height"
        android:layout_gravity="start"
        android:src="@drawable/ic_search" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pinned_recycler"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/search_bar_height"
        android:layout_gravity="center_horizontal" />

    <com.roy93group.launcher.ui.view.scrollbar.ScrollbarIconView
        android:id="@+id/app_drawer_icon"
        style="@style/Theme.CintaLauncher.SearchBar.Icon"
        android:layout_width="@dimen/search_bar_height"
        android:layout_height="@dimen/search_bar_height"
        android:layout_gravity="end"
        android:src="@drawable/ic_drawer_scroll" />
</androidx.cardview.widget.CardView>