<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flHomeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.LauncherActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFeedFilters"
        style="@style/Theme.AppLauncher.FeedFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <include layout="@layout/view_app_drawer" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="end"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvBackButtonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_padding_small"
            android:elevation="@dimen/w_3"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/w_45"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btBack"
                style="@style/Theme.AppLauncher.SearchBar.Icon"
                android:layout_width="@dimen/search_bar_height"
                android:layout_height="@dimen/search_bar_height"
                android:background="@drawable/ripple"
                android:scaleType="centerInside"
                android:src="@drawable/ic_cross"
                android:tint="@color/colorPrimary" />
        </androidx.cardview.widget.CardView>

        <include layout="@layout/activity_launcher_search_bar" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>
