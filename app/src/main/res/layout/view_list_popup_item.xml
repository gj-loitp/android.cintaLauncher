<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Theme.AppLauncher.ListPopup.Item.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        style="@style/Theme.AppLauncher.ListPopup.Item.Icon" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_small"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingVertical="@dimen/margin_padding_small">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text"
            style="@style/Theme.AppLauncher.ListPopup.Item.Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            style="@style/Theme.AppLauncher.ListPopup.Item.Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
