<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.roy93group.launcher.ui.view.BackdropImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitEnd" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/container"
        style="@style/Theme.AppLauncher.FeedCard.CardBehind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margin_padding_medium" />

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/Theme.AppLauncher.FeedCard.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon"
                style="@style/Theme.AppLauncher.FeedCard.SourceIcon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/source"
                style="@style/Theme.AppLauncher.FeedCard.Source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/time"
                style="@style/Theme.AppLauncher.FeedCard.Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            style="@style/Theme.AppLauncher.FeedCard.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            style="@style/Theme.AppLauncher.FeedCard.Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/buttonPrevious"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="@dimen/margin_padding_small"
                android:src="@drawable/ic_track_previous" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/buttonPlay"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="@dimen/margin_padding_small"
                android:padding="@dimen/margin_padding_small"
                android:src="@drawable/ic_play" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btNext"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="@dimen/margin_padding_small"
                android:src="@drawable/ic_track_next" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <include
            layout="@layout/view_feed_item_actions"
            android:visibility="gone" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>
