<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/margin_padding_small"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="@dimen/margin_padding_tiny"
        android:paddingTop="@dimen/margin_padding_medium"
        android:paddingEnd="@dimen/margin_padding_tiny"
        android:paddingBottom="@dimen/margin_padding_medium">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/w_45"
            android:layout_height="@dimen/w_45"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher"
            tools:tint="@color/color_test_primary" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvIconText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_tiny"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/txt_small"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/ivIcon"
            tools:text="@string/app_name"
            tools:textColor="@color/color_test_primary" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
