<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/w_3"
    app:cardUseCompatPadding="false"
    app:strokeColor="@color/colorPrimary"
    app:strokeWidth="@dimen/w_1">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_padding_medium"
        android:paddingBottom="@dimen/margin_padding_tiny">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/w_45"
            android:layout_height="@dimen/w_45"
            tools:src="@drawable/ic_launcher"
            tools:tint="@color/colorTest" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvIconText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/txt_small"
            android:textStyle="bold"
            tools:text="@string/app_name"
            tools:textColor="@color/colorTest" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.google.android.material.card.MaterialCardView>
