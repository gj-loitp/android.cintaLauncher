<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    style="@style/Theme.CintaLauncher.Drawer.Item.Container">
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            style="@style/Theme.CintaLauncher.Drawer.Item.Icon"
            android:id="@+id/icon_image"/>
        <TextView
            style="@style/Theme.CintaLauncher.Drawer.Item.Notifications"
            android:id="@+id/icon_notifications"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/Theme.CintaLauncher.Drawer.Item.Label">
            <ImageView
                style="@style/Theme.CintaLauncher.Drawer.Item.SmallIcon"
                android:visibility="gone"
                android:id="@+id/icon_image_small"/>
            <TextView
                android:id="@+id/icon_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>