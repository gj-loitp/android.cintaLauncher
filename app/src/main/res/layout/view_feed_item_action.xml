<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/margin_padding_medium"
    android:paddingTop="@dimen/margin_padding_small"
    android:paddingEnd="@dimen/margin_padding_medium"
    android:paddingBottom="@dimen/margin_padding_small"
    tools:background="@drawable/ripple_color_test">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivActionIcon"
        android:layout_width="@dimen/w_25"
        android:layout_height="@dimen/w_25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher"
        tools:tint="@color/color_test_primary" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvActionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivActionIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name"
        tools:textColor="@color/color_test_primary" />
</androidx.constraintlayout.widget.ConstraintLayout>
