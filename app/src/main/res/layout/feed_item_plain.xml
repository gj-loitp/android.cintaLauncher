<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/Theme.CintaLauncher.FeedCard.CardBehind">
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/feed_card_padding_vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            style="@style/Theme.CintaLauncher.FeedCard.SourceIcon"
            android:id="@+id/icon"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <TextView
            style="@style/Theme.CintaLauncher.FeedCard.Source"
            android:id="@+id/source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            style="@style/Theme.CintaLauncher.FeedCard.Time"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        style="@style/Theme.CintaLauncher.FeedCard.Title"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        style="@style/Theme.CintaLauncher.FeedCard.Description"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:ellipsize="end"/>
    <include layout="@layout/feed_item_actions"/>
</LinearLayout>